using System.Drawing;
using System.IO;
using System.Windows.Forms;

namespace Eventos_S4_Tr1
{
    public partial class frm_Eventos : Form
    {
        public frm_Eventos()
        {
            InitializeComponent();

            pnl_Evento_DD.AllowDrop = true;
            //pnl_Evento_DD.DragEnter += pnl_Evento_DD_DragEnter;
        }

